  {
    "name": "Lazy Watch - Speech Recognition",
    "version": "1.0",
    "description": "Speech Recognition plugin to skip to the next episode on Netflix",
    "manifest_version": 2,
    "content_scripts": [
      {
        "matches": ["*://www.netflix.com/*"],
        "js": ["content.js"]
      }
    ],
    "options_page": "options.html",
    "icons": {
        "16": "images/img16.png",
        "48": "images/img48.png"
    }
  }
