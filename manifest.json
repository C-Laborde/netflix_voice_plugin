{
  "manifest_version": 2,

  "name": "LazyWatch",
  "short_name": "LazyWatch",
  "description": "A plug in to rule Netflix by voice.",
  "version": "1.3.3",
  "default_locale": "en",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/img-16.png",
    "48": "img/img-48.png",
    "128": "img/icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "tts",
    "storage",
    "ttsEngine",
    "contextMenus",
    "https://support.lsdsoftware.com/"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": [
  ],
  "content_scripts": [{
    "matches": ["*://www.netflix.com/*"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": [
      "js/es6-promise.auto.min.js",
      "js/defaults.js",
      "js/speech.js",
      "js/document.js",
      "js/events.js",
      "js/stt.js",
      "js/listen.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "tts_engine": {
    "voices": [
      {"voice_name": "Amazon British English (Brian)", "lang": "en-GB", "gender": "male", "event_types": ["start", "end", "error"]},
      {"voice_name": "Amazon British English (Emma)", "lang": "en-GB", "gender": "female", "event_types": ["start", "end", "error"]}
    ]
  }
}
